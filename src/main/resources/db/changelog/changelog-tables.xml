<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet  id="1-User table"  author="Jelizaveta VoloÅ¡ina">
        <createTable  tableName="cuser">
            <column  name="cuser_id"  type="int"  autoIncrement="true">
                <constraints  primaryKey="true" primaryKeyName="pk_cuser"  nullable="false"/>
            </column>
            <column  name="cuser_name"  type="varchar(63)">
                <constraints  nullable="false"/>
            </column>
            <column  name="cuser_surname"  type="varchar(50)">
                <constraints  nullable="false"/>i
            </column>
            <column  name="cuser_email"  type="varchar(255)">
                <constraints  nullable="false" unique="true" uniqueConstraintName="ak_cuser_email"/>
            </column>
            <column  name="cuser_password"  type="varchar(60)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>